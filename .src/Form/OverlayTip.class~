PUBLIC SUB Redraw(tip AS String, x AS Integer, y AS Integer)
  DIM Mypic AS picture
  Textlabel1.text = tip
  ' [GB2:FNTH] ME.Move(x, y, Textlabel1.Font.width(tip), Textlabel1.Font.height(tip) + 4)
  ' [GB2:FNTW] ME.Move(x, y, Textlabel1.Font.width(tip), Textlabel1.Font.TextHeight(tip) + 4)
  ME.Move(x, y, Textlabel1.Font.TextWidth(tip), Textlabel1.Font.TextHeight(tip) + 4)
  ' MyPic = NEW picture(ME.width, ME.height, TRUE)
  ' Draw.Begin(mypic)
  '   Draw.FillStyle = Fill.solid
  '   Draw.FillColor = Color.yellow
  '   Draw.Rect(0, 0, ME.width, ME.height)
  '   'Draw.LineWidth = ME.height
  '   'Draw.Line(0, 0, ME.width, ME.height)
  ' Draw.end
  ' ME.Picture = MyPic
  ' ME.mask = TRUE  
  'ME.show
END


PUBLIC SUB Form_Leave()
    IF NOT (Global.MouseInside(FMain.SaveVolumeSlider) OR Global.MouseInside(FMain.ShowVolBtn)) THEN 'check needed due to a gambas bug with gtk
      FMain.VolumeFocused = FALSE
      OverlayTip.hide
  ENDIF
END


