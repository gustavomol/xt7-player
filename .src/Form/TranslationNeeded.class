Public Sub Form_Show()
  'ME.center
  Global.Center(Fmain, Me)
  Textarea1.text = "It seems that " & Application.name & " is not yet translated in your language: " & System.Language & ".\n"
  Textarea1.text = Textarea1.text & "Writing translations is very easy though,\nso if you care to help, you can find more information\n"
  Textarea1.text = Textarea1.text & "by following the links below.\n"
  Textarea1.text = Textarea1.text & "\nThank you,\nAntonio Orefice"
End

