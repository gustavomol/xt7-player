Public Sub Redraw(tip As String, x As Integer, y As Integer)
  Dim Mypic As Picture
  Textlabel1.text = tip
  Me.Move(x, y, Textlabel1.Font.TextWidth(tip), Textlabel1.Font.TextHeight(tip) + 4)
End


Public Sub Form_Leave()
    If Not (Global.MouseInside(FMain.SaveVolumeSlider) Or Global.MouseInside(FMain.ShowVolBtn)) Then 'check needed due to a gambas bug with gtk
      FMain.VolumeFocused = False
      OverlayTip.hide
  Endif
End


