Public Sub ShowLogs()
  Dim Tmp As String = ""
  Dim i As Integer
  LogWindow.Label2.visible = False
  'Logarea.Clear
  If FMain.mplayer.mediaheaders.Count > 1 Then
    tmp = "Commandline:" & "\n"
    tmp = tmp & FMain.mplayer.Commandline & "\n" & "\n"
    For i = 0 To FMain.mplayer.mediaheaders.Count - 1
      tmp = tmp & FMain.mplayer.mediaheaders[i] & "\n"
    Next 'i
    logarea.text = tmp
  Endif
End


