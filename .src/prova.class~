Public Sub Slider1_Change()
Dim alpha As Integer = Slider1.value
  Shell "echo 'RGBA32 1280 720 0 0 " & alpha & " 0' >/tmp/mylogo.fifo" Wait
  Shell "cat /tmp/mylogo.rgba >/tmp/mylogo.fifo" Wait
End

Public Sub Button1_Click()

  Timer1.start

  ' DIM alpha AS Integer
  ' REPEAT
  ' FOR alpha = 0 TO 255
  '   SHELL "echo 'RGBA32 528 224 20 10 " & alpha & " 0' >/tmp/mylogo.fifo" WAIT
  '   SHELL "sleep 0.1" WAIT
  '   SHELL "cat /root/Desktop/Xt7-logo_ok.rgba >/tmp/mylogo.fifo" WAIT    
  '   SHELL "sleep 0.2" WAIT
  ' NEXT
  ' FOR alpha = 255 TO 0
  '   SHELL "echo 'RGBA32 528 224 20 10 " & alpha & " 0' >/tmp/mylogo.fifo" WAIT
  '   WAIT 0.1
  '   SHELL "cat /root/Desktop/Xt7-logo_ok.rgba >/tmp/mylogo.fifo" WAIT    
  '   WAIT 0.2
  ' NEXT  
  ' UNTIL alpha = 256

End
Public alpha As Integer = 0
Public incrementing As Boolean = True
Public minalpha As Integer = -254
Public maxalpha As Integer = 0
Public mySTEP As Integer = 16

Public Sub Timer1_Timer()

  If FMain.mplayer.ProcessRunningOvr() Then
    If incrementing Then
      If alpha >= maxalpha Then
        incrementing = False
          Else
        alpha = alpha + mySTEP
      Endif
        Else
      If alpha <= minalpha Then
        incrementing = True
          Else
        alpha = alpha - mySTEP
      Endif
    Endif
  

  Endif
  

End

